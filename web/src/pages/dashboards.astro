---
import Layout from "../layouts/Layout.astro"
import Card from "../components/Card.astro"

const dashboards = [
  {
    title: "Filecoin In Numbers",
    description:
      "High level view into core Filecoin network metrics with a rich chart set.",
    link: "https://numbers.filecoindataportal.xyz/",
  },
  {
    title: "Filecoin Pulse",
    description:
      "Operational dashboard with Storage Provider, Client, and Allocator level metrics.",
    link: "https://pulse.filecoindataportal.xyz/",
  },
  {
    title: "Dune Filecoin Metrics",
    description:
      "Core Filecoin metrics in Dune Analytics for SQL based exploration.",
    link: "https://dune.com/kalen/filecoin-daily-metrics",
  },
  {
    title: "Storage Providers Market",
    description:
      "Visibility into the market between Storage Clients and Storage Providers.",
    link: "https://filecoin-project.github.io/filecoin-storage-providers-market/",
  },
]
---

<Layout
  title="Dashboards | Filecoin Data Portal"
  description="Explore public dashboards powered by Filecoin Data Portal datasets."
>
  <section class="page-header" aria-labelledby="dashboards-title">
    <h1 id="dashboards-title">Dashboards</h1>
    <p>
      Multiple public dashboards powered by the same open datasets. Compare
      views and drill down by use case.
    </p>
  </section>

  <section aria-label="Dashboard list">
    <div class="card-grid">
      {
        dashboards.map((dashboard) => (
          <Card
            title={dashboard.title}
            description={dashboard.description}
            headingLevel="h3"
            buttons={[
              {
                text: "Visit dashboard",
                link: dashboard.link,
                target: "_blank",
              },
            ]}
          />
        ))
      }
    </div>
  </section>
</Layout>
